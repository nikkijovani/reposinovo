<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>cadastroclie</servlet-name>
        <servlet-class>br.edu.iff.mercado.servlet.cadastroclie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginclie</servlet-name>
        <servlet-class>br.edu.iff.mercado.servlet.loginclie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginadm</servlet-name>
        <servlet-class>br.edu.iff.mercado.servlet.loginadm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletarAdmin</servlet-name>
        <servlet-class>br.edu.iff.mercado.servlet.DeletarAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cadastroclie</servlet-name>
        <url-pattern>/cadastroclie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginclie</servlet-name>
        <url-pattern>/loginclie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginadm</servlet-name>
        <url-pattern>/loginadm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletarAdmin</servlet-name>
        <url-pattern>/DeletarAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
